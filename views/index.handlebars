<h1>Eat-Da-Burger!</h1>

<h2>Burgers that Are Not Eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.id}}
      </li>
      <li>
        {{this.burger_name}}
      </li>
      <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">Devour it!</button>
        </form>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that Are Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.id}}
      </li>
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="add-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
